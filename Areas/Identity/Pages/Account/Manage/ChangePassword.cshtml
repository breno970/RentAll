@page
@model ChangePasswordModel
@{
    <br />
    ViewData["Title"] = "Alterar Senha";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Input.OldPassword" class="form-label">Senha Atual</label>
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Por favor, digite sua senha antiga." />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
           
            <br />
            <div class="form-floating mb-3">
                <label asp-for="Input.NewPassword" class="form-label">Nova Senha</label>
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Por favor, digite sua nova senha." />  
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
          
            <br />
            <div class="form-floating mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label">Repita a Senha</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Por favor, confirme sua nova senha." />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Atualizar senha</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
