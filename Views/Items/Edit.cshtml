@model aluguel.Models.Item

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tela de Edição</title>
    <link rel="stylesheet" href="~/css/caditem.css" asp-append-version="true" />
    <title>Rent All - Editar Item</title>
</head>
<body>

    <main id="container">

        <form id="card-it" method="post" enctype="multipart/form-data">

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id" />

                <!-- FORM HEADER -->
                <div class="card-it">
                    <h1>Tela de Edição</h1>

                    <div class="form-group">
                        <label for="nmitem">Nome</label>
                        <input type="text" id="nmitem" name="nmitem" class="form-control" value="@Model.nmitem" />
                        <span asp-validation-for="nmitem" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="dsitem">Descrição</label>
                        <textarea id="dsitem" name="dsitem" class="form-control">@Model.dsitem</textarea>
                        <span asp-validation-for="dsitem" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="snativo">Ativo?</label>
                        <select asp-for="snativo" class="form-control">
                            <option value="S" selected="@(Model.snativo == "S")">Sim</option>
                            <option value="N" selected="@(Model.snativo == "N")">Não</option>
                            <span asp-validation-for="snativo" class="text-danger"></span>
                        </select>

                    </div>
               



                <input asp-for="imagem1" type="hidden" class="form-control" />
                <span asp-validation-for="imagem1" class="text-danger"></span>

                <input asp-for="imagem2" type="hidden" class="form-control" />
                <span asp-validation-for="imagem2" class="text-danger"></span>

                <input asp-for="imagem3" type="hidden" class="form-control" />
                <span asp-validation-for="imagem3" class="text-danger"></span>

                <input asp-for="imagem4" type="hidden" class="form-control" />
                <span asp-validation-for="imagem4" class="text-danger"></span>

                <input asp-for="imagem5" type="hidden" class="form-control" />
                <span asp-validation-for="imagem5" class="text-danger"></span>

                <input asp-for="iduser" type="hidden" class="form-control" />
                <span asp-validation-for="iduser" class="text-danger"></span>


                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />

                    <a href="@Url.Action("Index")">Voltar para a lista</a>
                
                </div>
            </form>
        </form>
    </main>
</body>

