@model aluguel.ViewModel.ItemViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Criar Anúncio</title>

    <link rel="stylesheet" href="~/css/caditem.css" asp-append-version="true" />
    <title>Rent All - Criar Item</title>
</head>


<body>

    <!-- FORM HEADER -->
    <div class="card-it">
        <h1>Criar Item </h1>

        <form asp-action="Create" id="card-it" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



            <div class="form-group">
                <label asp-for="nmitem" class="control-label">Nome</label>
                <input asp-for="nmitem" class="form-control" placeholder="Nome do item" />
                <span asp-validation-for="nmitem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dsitem" class="control-label">Descrição</label>
                <textarea asp-for="dsitem" class="form-control" placeholder="Informações do item"></textarea>
                <span asp-validation-for="dsitem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="snativo" class="control-label">Deseja deixá-lo visível desde já?</label>
                <select asp-for="snativo" class="form-control">
                    <option value="S">Sim</option>
                    <option value="N">Não</option>
                </select>
                <span asp-validation-for="snativo" class="text-danger"></span>
            </div>


            <!-- Inputs para as imagens -->
            <div class="form-group">
                <label asp-for="imagem1" class="control-label">Imagem 1</label>
                <input asp-for="imagem1" class="form-control" />
                <span asp-validation-for="imagem1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imagem2" class="control-label">Imagem 2</label>
                <input asp-for="imagem2" class="form-control" />
                <span asp-validation-for="imagem2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imagem3" class="control-label">Imagem 3</label>
                <input asp-for="imagem3" class="form-control" />
                <span asp-validation-for="imagem3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imagem4" class="control-label">Imagem 4</label>
                <input asp-for="imagem4" class="form-control" />
                <span asp-validation-for="imagem4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imagem5" class="control-label">Imagem 5</label>
                <input asp-for="imagem5" class="form-control" />
                <span asp-validation-for="imagem5" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input asp-for="iduser" type="hidden" value="@User.FindFirst(ClaimTypes.NameIdentifier).Value" class="form-control" />
                <span asp-validation-for="iduser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="btn-container">
                    <input type="submit" value="Criar" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-success">Voltar para lista</a>
                </div>
            </div>
        </form>

    </div>
    

</body>

